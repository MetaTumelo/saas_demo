<% if !notice.blank? %>
    <script>
      $(document).ready(function () {
        $.notify({
          message: "<%= notice %>"
          },{
          type: 'success',
          newest_on_top: false
        });
    });
    </script>
<% end %>
<% if !alert.blank? %>
    <script>
      $(document).ready(function () {
        $.notify({
          message: "<%= alert %>"
          },{
          type: 'danger',
          newest_on_top: false
        });
    });
    </script>
<% end %>

<% if !notice.blank? %>
<script>
  $(document).ready(function () {
      $.growl({
          message: "<%= notice %>"
      }, {
          position: {
              from: "bottom",
              align: "left"
          },
          delay: 1000000
      });
  });
</script>
<% end %>