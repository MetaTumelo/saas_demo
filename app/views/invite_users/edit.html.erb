<% def msg(status) return "#{status}します、よろしいでしょうか？" end %>
<%#= form_for :controller => 'invite_users', @invite_user do |f| %>
<%= form_for @invite_user, :url => {:controller => "invite_users", :action => 'update'} do |f| %>
    <%= render(:partial => "form", :locals =>{:f => f}) %>
    
    <%= f.submit("Update", class:"btn btn-warning", data: {:confirm => msg('Update'), :disable_with => 'Updating'}) %>
    <%= link_to 'Go To The List', invite_users_path, :class => 'btn btn-default' %>
<% end %>