<% content_for :title do %>Update Client Details<% end %>
<% def msg(status) return "#{status}します、よろしいでしょうか？" end %>
<div class="container">
<%#= form_for @company_master do |f| %>
<%= form_for @company_master, :url => {:action => 'update'}, :html => { :id => 'submit_form', :class =>"form-horizontal"} do |f| %>
    <%= render(:partial => "form", :locals =>{:f => f}) %>
    
    <%#= f.submit("Update", class:"btn btn-warning", data: {:confirm => msg('Update'), :disable_with => 'Updating'}) %>
    <%#= link_to 'Go To Client List', company_masters_path, :class => 'btn btn-default' %>
<% end %>
</div>